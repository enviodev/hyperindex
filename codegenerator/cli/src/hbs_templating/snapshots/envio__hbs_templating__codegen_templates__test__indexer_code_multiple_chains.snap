type indexerChains = {
  @as("1") chain1: indexerChain,
  ethereumMainnet: indexerChain,
  @as("2") chain2: indexerChain,
}

/** Metadata and configuration for the indexer. */
type indexer = {
  /** The name of the indexer from config.yaml. */
