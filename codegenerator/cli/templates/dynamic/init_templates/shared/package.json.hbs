{
  "name": "{{project_name}}",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
  {{#if is_rescript}}
    "clean": "rescript clean",
    "build": "rescript",
    "watch": "rescript -w",
  {{/if}}
    "codegen": "envio codegen",
    "dev": "{{#if is_rescript}}pnpm build && {{/if}}envio dev",
    "start": "{{#if is_rescript}}pnpm build && {{/if}}envio start",
    "test": "{{#if is_rescript}}pnpm build && {{/if}}vitest run"
  },
  "devDependencies": {
  {{#if is_rescript}}
    "rescript": "11.1.3",
  {{/if}}
  {{#if is_typescript}}
    "@types/node": "^24.10.1",
    "typescript": "5.9.3",
  {{/if}}
    "vitest": "4.0.16"
  },
  "dependencies": {
    "envio": "{{envio_version}}"
  },
  "optionalDependencies": {
    "generated": "{{relative_path_from_root_to_generated}}"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
