{
  "name": "{{project_name}}",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "mocha": "NODE_OPTIONS='--experimental-specifier-resolution=node --no-warnings' mocha --loader=ts-node/esm test/**/*.{ts{{#if is_rescript}},res.mjs{{/if}}}",
  {{#if is_typescript}}
    "clean": "tsc --clean",
    "build": "tsc --build",
    "watch": "tsc --watch",
  {{/if}}
  {{#if is_rescript}}
    "clean": "rescript clean",
    "build": "rescript",
    "watch": "rescript -w",
  {{/if}}
    "codegen": "envio codegen",
    "dev": "{{#if is_rescript}}pnpm build && {{/if}}envio dev",
    "start": "{{#if is_rescript}}pnpm build && {{/if}}envio start",
    "test": "{{#if is_rescript}}pnpm build && {{/if}}pnpm mocha"
  },
  "devDependencies": {
  {{#if is_rescript}}
    "@rescript/react": "0.12.1", 
    "rescript": "11.1.3",
  {{/if}}
  {{#if is_typescript}}
    "@types/chai": "^4.3.11",    
    "@types/mocha": "10.0.6",
    "@types/node": "20.8.8",
    "typescript": "5.9.3",
    "chai": "4.3.10",
  {{/if}}
    "ts-node": "10.9.2",
    "mocha": "10.2.0"
  },
  "dependencies": {
    "envio": "{{envio_version}}"
  },
  "optionalDependencies": {
    "generated": "{{relative_path_from_root_to_generated}}"
  },
  "engines": {
    "node": ">=22.0.0 <=22.10.0"
  }
}
