    ],
  {{!--Only add these if there are any--}}
  {{#if entity.composite_indices.0}}
    ~compositeIndices=[
  {{#each entity.composite_indices as | composite_index |}}
      [
    {{#each composite_index as | index |}}
      "{{index}}",
    {{/each}}
      ],
  {{/each}}
    ],
  {{/if}}
  )
